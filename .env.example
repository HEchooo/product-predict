# ==============================================
# Product Translate Service Configuration
# ==============================================
# cp .env.example .env

# Application Configuration
APP_NAME="Product Translate API"
APP_VERSION="0.1.0"
DEBUG=false

# API Service Configuration
API_HOST="0.0.0.0"
API_PORT=8000

# ==============================================
# Google Gemini AI Configuration
# ==============================================
# Get your API key from: https://aistudio.google.com/apikey
GEMINI_API_KEY="your-gemini-api-key"
GEMINI_MODEL="gemini-2.0-flash-001"

# ==============================================
# Google Cloud Platform Configuration (for VertexAI)
# ==============================================
# If GEMINI_API_KEY is set, these are ignored
GCP_PROJECT="your-gcp-project-id"
GCP_LOCATION="us-east4"

# ==============================================
# OCR Configuration
# ==============================================
# Options: rapid, paddle, auto
DEFAULT_OCR_BACKEND="rapid"
PADDLE_LANG="ch"
# PADDLE_DEVICE="cpu"
OCR_AUGMENT=2

# ==============================================
# Inpaint Configuration
# ==============================================
# Options: lama (best quality, requires CUDA), opencv (fast, works everywhere)
# Use opencv on Mac/CPU, lama on CUDA GPU servers
DEFAULT_INPAINT_BACKEND="opencv"
# Options: auto, cuda, cpu, mps
LAMA_DEVICE="auto"

# ==============================================
# Font Configuration
# ==============================================
MIN_FONT_PX=10
MAX_FONT_PX=64
MIN_GOOD_FONT_PX=14

# ==============================================
# Processing Options
# ==============================================
ALLOW_EXTRA_LINE=true
MAX_EXTRA_LINES=1
# Options: auto, off, strict
GATE_MODE="auto"

# ==============================================
# Erase Refinement
# ==============================================
ERASE_REFINE_ITERS=2
ERASE_REFINE_RADIUS=7
# Options: ns, telea
ERASE_REFINE_METHOD="ns"
ERASE_RESIDUAL_DELTA_E=12.0
ERASE_RESIDUAL_GRAD=40.0
ERASE_RESIDUAL_MAX_AREA=2000

# ==============================================
# Safety Limits
# ==============================================
MAX_MASK_RATIO=0.75
MAX_SINGLE_POLY_AREA_RATIO=0.70

# ==============================================
# Paths
# ==============================================
SCHEMA_PATH="chart_translate_schema.json"
OUTPUT_DIR="output"
# Enable debug output (uncomment to enable)
# DEBUG_DIR="debug_output"

# ==============================================
# Logging Configuration
# ==============================================
# Options: DEBUG, INFO, WARNING, ERROR, CRITICAL
LOG_LEVEL="INFO"

# ==============================================
# CORS Configuration
# ==============================================
BACKEND_CORS_ORIGINS="*"

# ==============================================
# Aliyun Machine Translation Configuration
# ==============================================
# 阿里云机器翻译服务配置
# 获取方式: https://ram.console.aliyun.com/manage/ak
ALIYUN_ACCESS_KEY_ID="your-aliyun-access-key-id"
ALIYUN_ACCESS_KEY_SECRET="your-aliyun-access-key-secret"
ALIYUN_REGION_ID="cn-hangzhou"
ALIYUN_MT_ENDPOINT="mt.aliyuncs.com"
# ==============================================
# Upload API Configuration
# ==============================================
UPLOAD_IMAGE_URL=""

