[Unit]
Description=Product Predict API Service
After=network.target

[Service]
Type=simple
User=dudewei
WorkingDirectory=/home/dudewei/projects/product-predict
Environment="PATH=/home/dudewei/projects/product-predict/.venv/bin:/home/dudewei/.local/bin:/usr/bin"
ExecStart=/home/dudewei/projects/product-predict/.venv/bin/uvicorn main:app --host 0.0.0.0 --port 8000
Restart=always
RestartSec=5

[Install]
WantedBy=multi-user.target
